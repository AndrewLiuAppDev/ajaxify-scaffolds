  <td>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, cols: 120 %>
  </div>
  </td>
  <td>
  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration %>
  </div>
  </td>
  <td>
  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>
  </td>
  <td>
  <div class="field">
    <%= form.label :director_id %>
    <%= form.collection_select :director_id, Director.order(:name), :id, :name, {} %>
  </div>
  </td>
  <td>
  <div class="actions">
    <%= form.submit %>
  </div>
  </td>
